<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brown9mcMVVM2.Views.ContactDetailsPage"
             Title="ContactDetailsPage">
    <TableView Intent="Data">
        <TableRoot>
            <TableSection Title="Basic Information">
                <TextCell Text="Name" Detail="{Binding Contact.ContactName}"/>
                <EntryCell Label="Name" Text="{Binding Contact.ContactName}"/>
                <TextCell Text="Email" Detail="{Binding Contact.ContactEmail}"/>
                <TextCell Text="Phone Number" Detail="{Binding Contact.ContactPhoneNumber}"/>
                <TextCell Text="Description" Detail="{Binding Contact.ContactDescription}"/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>